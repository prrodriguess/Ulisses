<%= render 'shared/navbar2' %>
<div class="container p-5">
  <div class="row">
    <% @goals.each do |goal| %>
      <div class="col-md-4 mb-3">
        <div class="card">
          <div class="card-body">
            <h3 class="card-title text-center text-dark"> <%= link_to "#{goal.title}\n (#{goal.done ? 'FEITO' : 'PENDENTE'})", goal_path(goal.id) %> </h3>
            <h3><%= link_to "Remover", goal_path(goal.id), method: :delete %></h3>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>




