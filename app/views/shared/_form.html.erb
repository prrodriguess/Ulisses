<div id="container">
	<h4 class="mt-4 mb-3">Criar um novo compromisso</h4>
<%= simple_form_for @weight_goal,
wrapper: :horizontal_form,
wrapper_mappings: {
	date:     :horizontal_multi_select,
	datetime: :horizontal_multi_select,
	file:     :horizontal_file,
	boolean:  :horizontal_boolean
}	do |f| %>
<div class="p-3">
  <%= f.input :weight_goals_title, :label => 'Título', :placeholder => 'Projeto Verão' %>
  <%= f.input :current, :label => "Peso atual (kg)", :placeholder => '70'  %>
  <%= f.input :desired, :label => "Peso desejado (kg)", :placeholder => '60' %>
  <%= f.input :deadline, :label => "Prazo", :placeholder => '70' %>
  <%= f.input :penalty, :label => "Penalidade em caso de descumprimento (R$)", :placeholder => '1000' %>
  <%= f.input :price, as: :currency %>
  <p class="text-left mr-2">Amount: <%= humanized_money_with_symbol(@weight_goal.price) %></p>
 </div>
  <div class="form-group row mb-0">
  	<div class="col-sm-4 offset-sm-4">
  <%= f.button :submit, class: "btn btn-warning" %>
  </div>
<% end %>
</div>
