<div id="home">
  <div id="container">
    	<h4 class="mt-4 mb-3">Criar um novo compromisso</h4>
    <%= simple_form_for @weight_goal,
    wrapper: :horizontal_form,
    wrapper_mappings: {
    	date:     :horizontal_multi_select,
    	datetime: :horizontal_multi_select,
    	file:     :horizontal_file,
    	boolean:  :horizontal_boolean
    }	do |f| %>
      <div class="p-3">
        <%= f.input :current %>
        <%= f.input :desired %>
        <%= f.input :deadline %>
        <%= f.input :penalty %>
        <%= f.input :price %>
        <p class="text-left mr-2">Amount: <%= humanized_money_with_symbol(@weight_goal.price) %></p>
       </div>
    <div class="form-group row mb-0">
        <div class="col-sm-4 offset-sm-4">
            <%= f.button :submit, class: "btn-custom mb-3" %>
        </div>
      <% end %>
    </div>
  </div>
</div>