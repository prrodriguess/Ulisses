<div id="home">
  <div id="container">
    <%= simple_form_for @goal,
      wrapper: :horizontal_form,
      wrapper_mappings: {
          date:     :horizontal_multi_select,
          datetime: :horizontal_multi_select,
          file:     :horizontal_file,
          boolean:  :horizontal_boolean
      } do |f| %>

      <div class="p-3">
            <%= f.input :title, :label => 'TÃ­tulo', :placeholder => 'Minha Meta' %>
            <%= f.input :deadline, :label => "Prazo", :placeholder => '70' %>
            <%= f.input :penalty, :label => "Penalidade (R$)", :placeholder => '1000' %>
      </div>

      <div class="form-group row mb-0">
        <div class="col-sm-4 offset-sm-4">
          <%= f.button :submit, :value => "Continuar", class: "btn-custom" %>

            <%= link_to content_tag(:span, 'Continuar'), goals_path, class:'new-ba' %>

            <script>
                const btn = document.querySelector('.new-ba');
                btn.onmousemove = function(e){
                  const x = e.pageX - btn.offsetLeft;
                  const y = e.pageY - btn.offsetTop;

                  btn.style.setProperty('--x', x + 'px');
                  btn.style.setProperty('--y', y + 'px');
                }
            </script>
        </div>
    <% end %>
    </div>
  </div>
</div>