<div class="row justify-content-center">
  <div class="col-6 mt-5 bg-dark text-center p-3">
      <%= simple_form_for @goal,
        wrapper: :horizontal_form,
        wrapper_mappings: {
            date:     :horizontal_multi_select,
            datetime: :horizontal_multi_select,
            file:     :horizontal_file,
            boolean:  :horizontal_boolean
        } do |f| %>

        <div class="text-white p-3">
              <%= f.input :title, :label => 'O Que Vou Fazer?', :placeholder => 'Minha Meta' %>
              <div class="form-group row">
                <label for="goal_dealine" class="col-3 col-form-label">Até Quando?*</label>
              <div class="col-9">
                <input class="form-control" type="date" name="goal[deadline]" id="goal_dealine">
              </div>  
              </div>
              <%= f.input :penalty, :label => "Penalidade (R$)", :placeholder => '1.000,00' %>
              <%= f.input :referee, :label => "E-mail do Árbitro", :placeholder => 'Alguém para verificar se sua meta foi cumprida' %>
              <div class="form-check ms-5">
                <input class="form-check-input col-2" type="checkbox" value="" id="defaultCheck1">
                <label class="form-check-label col-10" for="defaultCheck1">
                Quero direcionar a penalidade para uma das ONGs parceiras
                </label>
              </div>
        </div>

        <div class="form-group row mb-0">
          <div class="col-sm-4 offset-sm-4">
            <%= f.button :submit, :value => "Assumir compromisso", class: "new-b" %>

          </div>
      <% end %>
      </div>
  </div>
</div>

